{
    "name": "coldbox-vite-plugin",
    "version": "1.0.2",
    "description": "ColdBox plugin for Vite.",
    "keywords": [
        "coldbox",
        "vite",
        "vite-plugin"
    ],
    "homepage": "https://github.com/ColdBox/coldbox-vite-plugin",
    "repository": {
        "type": "git",
        "url": "https://github.com/ColdBox/coldbox-vite-plugin"
    },
    "license": "MIT",
    "author": "Eric Peterson <eric@elpete.com>",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./inertia-helpers": {
            "import": "./inertia-helpers/index.js",
            "types": "./inertia-helpers/index.d.ts",
            "node": "./inertia-helpers/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist",
        "/inertia-helpers"
    ],
    "scripts": {
        "build": "npm run build-plugin && npm run build-inertia-helpers",
        "build-plugin": "rm -rf dist && tsc && cp src/dev-server-index.html dist/",
        "build-inertia-helpers": "rm -rf inertia-helpers && tsc --project tsconfig.inertia-helpers.json",
        "lint": "eslint --ext .ts ./src ./tests",
        "ssr:serve": "vite build --ssr && node storage/ssr/ssr.js",
        "test": "vitest run"
    },
    "devDependencies": {
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "esbuild": "0.16.10",
        "eslint": "^8.14.0",
        "typescript": "^4.6.4",
        "vite": "^4.0.0",
        "vitest": "^0.25.2"
    },
    "peerDependencies": {
        "vite": "^3.0.0 || ^4.0.0"
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "vite-plugin-full-reload": "^1.0.1",
        "picocolors": "^1.0.0"
    }
}
